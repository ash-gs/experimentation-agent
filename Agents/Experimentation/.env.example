# Application Configuration
APP_NAME="AB Testing Agent"
APP_VERSION="0.1.0"
ENVIRONMENT="development"

# Anthropic API Configuration
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY="your_anthropic_api_key_here"

# LLM Configuration
DEFAULT_MODEL="claude-3-5-sonnet-20241022"
COMPLEX_ANALYSIS_MODEL="claude-opus-4-5-20251101"
MAX_TOKENS=4096
TEMPERATURE=0.7

# Database Configuration
DATABASE_URL="sqlite:///data/experiments.db"
ECHO_SQL=false

# Logging Configuration
LOG_LEVEL="INFO"
LOG_FILE=  # Optional: set to a file path to enable file logging

# Statistical Configuration
DEFAULT_POWER=0.8
DEFAULT_ALPHA=0.05
DEFAULT_CONFIDENCE_LEVEL=0.95

# Experiment Configuration
MIN_SAMPLE_SIZE=1000
MAX_VARIANTS=10
DEFAULT_TRAFFIC_ALLOCATION=1.0
